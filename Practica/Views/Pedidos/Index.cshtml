@model IEnumerable<Practica.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>

<p>
    @Html.ActionLink("Nuevo pedido", "Create")
</p>
<table id="tbIndex" class="table table-striped table-bordered order-column" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nombre_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDePago.Concepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Concepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoBien)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDePago.Concepto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Concepto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoBien)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.Identificador }) |
                    @Html.ActionLink("Ver", "Details", new { id = item.Identificador }) @*|
                        @Html.ActionLink("Eliminar", "Delete", new { id=item.Identificador if})*@
                </td>
            </tr>
        }
    </tbody>

</table>
<script>
    $(document).ready(function () {
        $('#tbIndex').DataTable({
            "order": [[3, "desc"]],
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No se han encontrado resultados - intente de nuevo",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros",
                "infoFiltered": "(Filtrados de _MAX_ registros totales)",
                "search": "Búsqueda",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous":"Anterior"
                }
            }
        });
    });
</script>