@model Practica.Models.Usuario
@{
    ViewBag.Title = "Inicio de sesión";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("Details", "Usuarios", "", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)
            <div class="form-actions no-color">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Nombre_usuario, new { @placeholder = "Usuario", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nombre_usuario, "as", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Contraseña, new { @placeholder = "Contraseña", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Contraseña, "sa", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Iniciar sesión" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>