@model IEnumerable<Practica.Models.Factura>

@{
    ViewBag.Title = "Facturas";
}

<h2>Facturas</h2>

<p>
    @Html.ActionLink("Facturar nuevo", "Create")
</p>
<table id="tbIndex" class="table table-striped table-bordered order-column" style="width:100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pedido.Concepto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.Concepto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Identificador }) |
                @Html.ActionLink("Details", "Details", new { id = item.Identificador }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Identificador })
            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(function () {
        $('#tbIndex').DataTable({
            "order": [[3, "desc"]],
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No se han encontrado resultados - intente de nuevo",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros",
                "infoFiltered": "(Filtrados de _MAX_ registros totales)",
                "search": "Búsqueda",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            }
        });
    });
</script>