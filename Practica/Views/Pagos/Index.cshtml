@model IEnumerable<Practica.Models.Pagos>

@{
    ViewBag.Title = "Pagos";
}

<h2>Pagos</h2>

<p>
    @Html.ActionLink("Registrar nuevo pago", "Create")
</p>
<table id="tbIndex" class="table table-striped table-bordered order-column">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pedido.Concepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConceptoDePago.Concepto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPago)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pedido.Concepto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConceptoDePago.Concepto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPago)
                </td>
                <td>
                    @*@Html.ActionLink("Modificar", "Edit", new { id = item.Identificador }) |*@
                    @Html.ActionLink("Detalles", "Details", new { id = item.Identificador })
                    @*@Html.ActionLink("Eliminar", "Delete", new { id = item.Identificador })*@
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#tbIndex').DataTable({
            "order": [[2, "desc"]],
            "language": {
                "lengthMenu": "Mostrar _MENU_ registros por página",
                "zeroRecords": "No se han encontrado resultados - intente de nuevo",
                "info": "Mostrando página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay registros",
                "infoFiltered": "(Filtrados de _MAX_ registros totales)",
                "search": "Búsqueda",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            }
        });
    });
</script>